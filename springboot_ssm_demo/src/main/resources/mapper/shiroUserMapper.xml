<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lzc.springboot.ssm.dao.ShiroUserMapper" >
    
    <!--根据用户名称查询用户信息-->
    <select id="selectUserByName" resultType="CurrentUser" parameterType="string">
        SELECT
          user_id as userId,
          user_name as userName,
          user_pwd as userPwd,
          perms as perms
          FROM shiro_user
          WHERE user_name = #{name}
    </select>
    
</mapper>