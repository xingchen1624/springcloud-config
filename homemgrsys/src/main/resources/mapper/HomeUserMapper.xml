<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzc.hmgr.mapper.HomeUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lzc.hmgr.bo.HomeUser">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="age" property="age" />
        <result column="birthday" property="birthday" />
        <result column="phone" property="phone" />
        <result column="address" property="address" />
        <result column="duty" property="duty" />
        <result column="is_delete" property="isDelete" />
        <result column="creator" property="creator" />
        <result column="create_time" property="createTime" />
        <result column="updater" property="updater" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!--分页查询sql-->
    <sql id="selectByDtoSql">
        select * from home_user t
        <where>
            <if test="userDto.userName != null and userDto.userName != '' ">
                AND t.user_name like CONCAT('%',#{userDto.userName},'%')
            </if>
            <if test="userDto.age != null">
                AND t.age > #{userDto.age}
            </if>
        </where>
    </sql>
    
    <select id="selectPageByDto" resultType="com.lzc.hmgr.bo.HomeUser">
        <include refid="selectByDtoSql"></include>
    </select>

</mapper>
